<%= form_tag(blog_path, method: :patch) do %>
    <input type="text" name="title" placeholder="Title" class= "titlebox" value="<%= @blog.title %>">
    <textarea name="text" placeholder="text" rows="10" cols="30" class= "textbox"><%= @blog.text %></textarea>
    <input type="submit" value="SEND" class= "formbtn">
<% end %>
